# Build Ncurses
cd $RPTX/sources
tar xf ncurses-6.3.tar.gz && cd ncurses-6.3
./configure --host=$LFS_TGT \
            --build=$(./config.guess) \
            --with-manpage-format=normal \
            --with-shared \
            --without-debug \
            --without-ada \
            --without-normal \
            --enable-widec \
            $SYSFLAGS $HELPFLAGS \
            --docdir=/help/doc/ncurses-6.3

make && make TIC_PATH=/usr/bin/tic install
echo "INPUT(-lncursesw)" > $RPTX/system/lib/libncurses.so
